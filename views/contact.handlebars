<section class="bg-base-100 pb-16">
  <!-- Hero Banner -->
  <div
    class="relative h-64 sm:h-80 md:h-96 w-full overflow-hidden bg-gradient-to-br from-primary to-primary-focus border-base-300 border-t-2 border-l-2 border-r-2"
  >

    <!-- Text Overlay -->
    <div
      class="absolute inset-0 flex items-center px-6 sm:px-12 md:px-16 lg:px-24"
    >
      <div class="max-w-2xl">
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold text-base-content"
        >
          Get in Touch With Our Parts Experts
        </h1>
        <p class="mt-4 text-lg sm:text-xl text-base-content/90">
          Have questions about our OEM components? Our team is ready to assist
          you.
        </p>
      </div>
    </div>
  </div>

  <!-- Contact Form Section -->
  <div
    class="px-4 sm:px-6 lg:px-8 pt-12 border-base-300 border-t-2 border-l-2 border-r-2"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body p-6 sm:p-8">
          <h2 class="card-title text-2xl sm:text-3xl mb-6">Send Us a Message</h2>
          <form id="contactForm" class="space-y-6">
            <!-- Name Input -->
            <div class="form-control">
              <label class="label" for="name">
                <span class="label-text">Your Name</span>
              </label>
              <input
                type="text"
                id="name"
                placeholder="Enter your name"
                class="input input-bordered w-full focus:input-primary"
              />
            </div>

            <!-- Email Input -->
            <div class="form-control">
              <label class="label" for="email">
                <span class="label-text">Email Address</span>
              </label>
              <input
                type="email"
                id="email"
                placeholder="Enter your email"
                class="input input-bordered w-full focus:input-primary"
              />
              <label class="label">
                <span class="label-text-alt">We'll never share your email</span>
              </label>
            </div>

            <!-- Phone Input -->
            <div class="form-control">
              <label class="label" for="phone">
                <span class="label-text">Phone Number</span>
              </label>
              <input
                type="tel"
                id="phone"
                placeholder="Enter your phone number"
                class="input input-bordered w-full focus:input-primary"
              />
            </div>

            <!-- Message Input -->
            <div class="form-control">
              <label class="label" for="message">
                <span class="label-text">Your Message</span>
              </label>
              <textarea
                id="message"
                rows="4"
                placeholder="Tell us about your parts requirements"
                class="textarea textarea-bordered w-full focus:textarea-primary"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="form-control mt-8">
              <button type="submit" id="Sub" class="btn btn-primary btn-block">
                <span class="text-lg">Send Message</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 ml-2"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"
                  />
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="card bg-base-200 shadow-xl">
          <div class="card-body p-6 sm:p-8">
            <h2 class="card-title text-2xl sm:text-3xl mb-6">Contact Information</h2>
            <div class="space-y-6">
              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 mt-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-primary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg">Sales Inquiries</h3>
                  <p class="text-base-content/80">+86 21 1234 5678</p>
                  <p class="text-sm text-base-content/60">Mon-Fri: 8:00 AM -
                    5:00 PM CST</p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 mt-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-primary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg">Email Us</h3>
                  <p class="text-base-content/80">sales@Attaplumbing.com</p>
                  <p class="text-base-content/80">support@Attaplumbing.com</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="assets/js/contact.js"></script>